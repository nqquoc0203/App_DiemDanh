<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#ADB5D6"
        app:cardCornerRadius="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="60dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/ivAvatar"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào,"
            android:id="@+id/hello"
            android:textAppearance="@style/TextSmall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="160dp"
            android:layout_marginTop="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textSize="25dp"
            android:textAppearance="@style/TextSmall"
            app:layout_constraintTop_toBottomOf="@+id/hello"
            app:layout_constraintLeft_toLeftOf="@id/hello"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/notification"
            android:id="@+id/ivNotification"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:cardBackgroundColor="#FC1010"
            app:cardCornerRadius="50dp"
            app:layout_constraintRight_toRightOf="@+id/ivNotification"
            app:layout_constraintTop_toTopOf="@id/ivNotification"
            android:layout_marginEnd="5dp">
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/tvNotificationNumber"
                android:text="3"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/alata"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:id="@+id/cvCheckin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="#F7F2FA"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/checkin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điểm danh"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextSmall"
                android:textSize="16sp"
                android:paddingLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điểm danh trong thời gian quy định"
                android:textSize="14sp"
                android:fontFamily="@font/alata"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:id="@+id/cvSchedule"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="#F7F2FA"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="@id/cvCheckin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/schedule"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lịch học"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextSmall"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Theo dõi lịch học"
                    android:textSize="14sp"
                    android:fontFamily="@font/alata"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:id="@+id/cvTest_Schedule"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#F7F2FA"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@+id/cvCheckin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/test_schedule"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lịch thi"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextSmall"
                    android:textSize="16sp"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Theo dõi lịch thi"
                    android:textSize="14sp"
                    android:fontFamily="@font/alata"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>