<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:layout_width="483dp"
        android:layout_height="200dp"
        android:background="@drawable/yellow_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="650dp"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="155dp"
            android:layout_height="155dp"
            app:cardBackgroundColor="#ADB5D6"
            app:cardCornerRadius="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp">
            <ImageView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:id="@+id/ivAvatar"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>
        </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên"
        android:textAppearance="@style/TextSmall"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="310dp"
        android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textAppearance="@style/TextSmall"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="40dp"/>
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSSV"
            android:textAppearance="@style/TextSmall"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvID"
            android:textAppearance="@style/TextSmall"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"/>
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvID"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:textAppearance="@style/TextSmall"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tvID"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSex"
            android:textAppearance="@style/TextSmall"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tvID"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"/>
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSex"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail"
            android:textAppearance="@style/TextSmall"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tvSex"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMail"
            android:textAppearance="@style/TextSmall"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/tvSex"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"/>
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMail"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngành"
            android:textAppearance="@style/TextSmall"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tvMail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMajor"
            android:textAppearance="@style/TextSmall"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/tvMail"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"/>
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMajor"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>