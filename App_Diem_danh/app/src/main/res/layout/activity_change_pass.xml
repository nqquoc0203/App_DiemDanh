<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ChangePassActivity">
    <LinearLayout
        android:id="@+id/llShow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#FFF0C8"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/back_arrow"
            android:layout_marginTop="20dp"
            android:id="@+id/ivBack"/>
        <TextView
            android:fontFamily="@font/alata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thay đổi mật khẩu"
            android:textColor="@color/black"
            android:textAppearance="@style/TextBig"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:paddingLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llShow1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/login_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/llShow"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="30dp"
        android:orientation="vertical">
        <EditText
            android:fontFamily="@font/alata"
            android:textAppearance="@style/TextSmall"
            android:id="@+id/CurrentPass"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu hiện tại"
            android:inputType="text"/>
        <EditText
            android:fontFamily="@font/alata"
            android:id="@+id/PassChange"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextSmall"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu mới"
            android:inputType="text"/>
        <EditText
            android:fontFamily="@font/alata"
            android:id="@+id/PrePass"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:textAppearance="@style/TextSmall"
            android:inputType="text"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:fontFamily="@font/alata"
        android:id="@+id/SucessBtn"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/llShow1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        android:textAppearance="@style/TextSmall"
        android:backgroundTint="#FFDDE9"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>